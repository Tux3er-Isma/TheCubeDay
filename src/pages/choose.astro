---
import Layout from "../layouts/Layout.astro";
import Restaurant from "../components/Choose/Restaurant.astro";
import day from "../assets/Choose/day.png";
import fusion from "../assets/Choose/fusion.png";
import font from "../assets/Choose/font.png";
---

<Layout title="Escoge un restaurante">
    <a href="/"><i class="fa-solid fa-arrow-left return"></i></a>
    <h1 class="title">ESCOGE UN RESTAURANTE</h1>
    <main class="main">
        <Restaurant
            src={day}
            title="The Cube "
            title2="Day"
            color="#FF4800"
            location="Carrer dels Castellers de Tarragona, 1, local 3, 43002 Tarragona"
        />
        <Restaurant
            src={fusion}
            title="The Cube "
            title2="Fusion"
            color="#AF0000"
            location="43002 Tarragona"
        />
        <Restaurant
            src={font}
            title="The Cube "
            title2="De La Font"
            color="#FF9500"
            location="PlaÃ§a de la Font, 31, 43003 Tarragona"
        />
    </main>
</Layout>

<style lang="scss">
    body {
        width: 100vw;
        height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        overflow-x: hidden;
        justify-content: center;
    }

    .return {
        position: absolute;
        color: #000;
        top: 20px;
        left: 20px;
        font-size: 30px;
    }

    .title {
        color: #e68a00;
        font-family: "Bebas Neue", sans-serif;
        font-size: 142.55px;
    }

    .main {
        display: flex;
        width: 100%;
        justify-content: space-around;
        margin-bottom: 20px;
    }

    // .footer{

    //     &__btn{
    //         background-color: #FF4800;
    //         color: #fff;
    //         padding: 10px;
    //         width: 200px;
    //     }
    // }

    @media only screen and (max-width: 480px) {
        body {
            height: fit-content;
        }

        .title {
            font-size: 80px;
            text-align: center;
            margin-top: 70px;
        }

        .main {
            flex-direction: column;
            align-items: center;
            gap: 40px;
        }
    }

    @media only screen and (min-width: 1600px) {
        .title {
            position: relative;
            bottom: 60px;
        }
    }
</style>
