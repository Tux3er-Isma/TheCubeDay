import ResponsiveNav from "../components/ResponsiveNav.astro";
import Main from "../components/Main/Main.astro";
import Mid from "../components/Mid/Mid.astro";
import Restaurants from "../components/Restaurants/Restaurants.astro";
import Aside from "../components/Aside/Aside.astro";

//Mobile 
import MNav from "../components/Mobile/Header/Nav.astro"
import MHeader from "../components/Mobile/Header/Header.astro";
import MMain from "../components/Mobile/Main/Main.astro";
//IMGs
---

<Layout title="TheCubeWorld">
	<div class="preloader">
		<PreLoader />
	</div>
	<div class="b">
		<div class="desktop">
			<Header />
			<Main />
			<Mid></Mid>
			<Restaurants></Restaurants>
			<Aside></Aside>
		</div>
		<div class="pop-up">
			<div class="pop-up__content">
