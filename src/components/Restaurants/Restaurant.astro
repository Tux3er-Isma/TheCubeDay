---
//Props
// Definimos el tipo para las props, incluyendo `tags` como un array de arrays de strings
interface Props {
    title: string;
    title2: string;
    tC1: string;
    tC2: string;
    bC: string;
    bR: string;
    src1: { src: string };
    src2: { src: string };
    bG: string;
    restaurant: string;
    tags: string[][];
    scrollAmmount: number;
    sourceArray: string[][];
    sticker: { src: string };
}

// Desestructuramos `Astro.props` usando el tipo `Props`
const {
    title,
    title2,
    tC1,
    tC2,
    bC,
    bR,
    src1,
    src2,
    bG,
    restaurant,
    tags,
    scrollAmmount,
    sourceArray,
    sticker,
} = Astro.props as Props;
// Define el tipo para un tag

//Imports
import Tags from "./Tags.astro";
import Gallery from "./Gallery.astro";

import img from "../../assets/Restaurants/r-1/sticker-1.png";
---

<article
    class="container"
    style=`background-color: ${bG}`
    data-restaurant={restaurant}
>
    <div class="container__sticker-container">
        <img src={sticker.src} class="container__sticker" />
    </div>
    <div class="container__part container__part--1">
        <h1 class="container__part__title" style=`color: ${tC1};` transition:name={restaurant}>
            {title}<span
                class="container__part__title--color"
                style=`color: ${tC2}`
            >
                {title2}</span
            >
        </h1>
    </div>
    <div class="container__part container__part--2">
        <marquee class="container__part__marquee" scrollamount={scrollAmmount}>
            <div class="container__part__marquee__content">
                {
                    tags.map((tag) => (
                        <Tags
                            icon={tag[0]}
                            txt={tag[1]}
                            bG={tag[2]}
                            iC={tag[3]}
                            tC={tag[4]}
                        />
                    ))
                }
            </div>
        </marquee>
    </div>
    <div class="container__part container__part--3">
        {
            sourceArray.map((src, index) => (
                <Gallery
                    key={index}
                    src1={src[0]}
                    src2={src[1]}
                    src3={src[2]}
                    src4={src[3]}
                    restaurant={src[4]}
                    bR={src[5]}
                />
            ))
        }
    </div>
</article>

<style lang="scss">
    .container {
        height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-evenly;
        gap: 1vw;
        position: relative;

        &__sticker-container {
            position: absolute;
            width: 150px;
            height: 150px;
            // top: 100px;
            // right: 100px;
            z-index: 10;
        }

        &__sticker {
            position: relative;
            width: 150px;
            height: 150px;
            z-index: 10;
            transition: all 0.5s;
            filter: drop-shadow(7px 4px 0.7px #000000bf);

            &:hover {
                cursor: grab;
                scale: 1.1;
                filter: drop-shadow(7px 20px 7px #000000c1);
            }

            &:active{
                cursor: grabbing;
            }
        }

        &__part {

            &--1 {
                margin-top: 1vw;
                display: flex;
                flex-direction: column;
                align-items: center;
                view-timeline-name: --image;
                view-timeline-axis: inline;
                animation-timeline: --image;
                animation-name: fade-in;
                animation-range: entry 0% cover 40%;

                animation-fill-mode: both;

                @keyframes fade-in {
                    from {
                        scale: 25%;
                        opacity: 0;
                    }
                    to {
                        scale: 100%;
                        opacity: 1;
                    }
                }
            }

            &--2 {
                display: flex;
                justify-content: center;
                width: 85%;
                position: relative;
                height: fit-content;
                position: relative;
                margin-bottom: 10px;
            }

            &--3 {
                // width: 100%;
                // display: flex;
                // justify-content: center;
                // align-items: center;
                display: flex;
                width: 100%;
                justify-content: center;
                align-items: center;
            }

            &__title {
                font-family: "Bebas Neue", sans-serif;
                font-size: 230.53px;
                line-height: 200px;
                text-shadow:
                    2px 2px 4px rgba(0, 0, 0, 0.1),
                    4px 4px 8px rgba(0, 0, 0, 0.1);
                cursor: pointer;
                background: transparent;
                transition: all 0.5s;

                &:hover {
                    background: url("https://imag.bonviveur.com/pepito-venezolano.jpg");
                    -webkit-text-fill-color: transparent;
                    background-clip: text;
                    background-position: center;
                    background-size: cover;
                }

                &--color {
                    text-shadow:
                        2px 2px 4px rgba(0, 0, 0, 0),
                        4px 4px 8px rgba(0, 0, 0, 0);
                }
            }

            &__marquee {
                width: 100%;

                &__content {
                    display: flex;
                    gap: 10px;
                }
            }

            &__img {
                margin-top: 40px;
                object-fit: cover;
            }
        }
    }

    [data-restaurant="1"] {
        width: 1078px;

        .container__sticker-container {
            right: 350px;
            top: 60vh;
        }

        .container__sticker {
        }

        .container__part {
            &__img {
                height: 456px;

                &--1 {
                    width: 536px;
                }

                &--2 {
                    width: 256px;
                }
            }
        }
    }

    [data-restaurant="2"] {
        width: 1348px;

        .container__sticker-container {
            right: 10px;
            top: 260px;
        }

        .container__sticker {
            filter: drop-shadow(-10px 0px 1px #000000c1);

            &:hover {
                filter: drop-shadow(-16px 0px 7px #000000c1);
            }
        }
    }

    [data-restaurant="3"] {
        width: 1745px;

        .container__sticker-container {
            right: 40px;
            top: 100px;
        }

        .container__part {
            &__img {
                height: 456px;

                &--1 {
                    width: 1086px;
                }

                &--2 {
                    width: 256px;
                }
            }
        }
    }

    @media only screen and (max-width: 900px) {
        .container {
            height: 90vh;
        }
    }

    @media only screen and (min-width: 1600px) {
        .container {
            justify-content: space-around;
            &__part {
                &--1 {
                    margin-top: 0px;
                }

                &--2 {
                    margin-top: -100px;
                    margin-bottom: 20px;
                }

                &--3 {
                    margin-top: -100px;
                }
                &__title {
                    position: relative;
                    // top: 60px;
                    // text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3), 4px 4px 8px rgba(0, 0, 0, 0.2);
                }

                &__subtitle {
                    position: relative;
                    top: 20px;
                }

                &__img {
                    position: relative;
                    top: 10px;
                }
            }
        }
    }
</style>
