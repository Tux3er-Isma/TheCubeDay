---
const { icon, txt, bG, iC, tC } = Astro.props;
---

<div class="tag" style=`background-color: ${bG}`>
    <i class=`fa-solid fa-${icon} tag__icon` style=`color: ${iC}`></i>
    <p class="tag__txt" style=`color: ${tC}`>{txt}</p>
</div>

<style lang="scss">
    .tag {
        background-color: #fff;
        width: fit-content;
        padding-left: 10px;
        padding-right: 10px;
        gap: 10px;
        height: 50px;
        display: flex;
        border-radius: 16.44px;
        justify-content: space-evenly;
        align-items: center;
        font-family: "Bebas Neue", sans-serif;
        font-size: 30px;
        transition: all 0.3s;
        -webkit-user-select: none; /* Safari */
        -ms-user-select: none; /* IE 10 and IE 11 */
        user-select: none; /* Standard syntax */

        &:hover {
            scale: 0.9;
            opacity: 0.5;
        }
    }
</style>
