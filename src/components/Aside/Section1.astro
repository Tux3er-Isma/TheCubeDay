---
import Img1 from "../../assets/Main/interactive.png";
import Img2 from "../../assets/Aside/img-1.png";
---

<section class="container">
    <div class="container__img-container">
        <img src={Img1.src} class="container__img-container__img" />
    </div>
    <div class="container__content">
        <div>
            <h1 class="container__content__title">
                MÁS DE <br />
            </h1>
            <span class="container__content__title--bold"
                >THE CUBE <span class="container__content__title--bold__small"
                    >AQUÍ</span
                ></span
            >

            <ul class="container__content__list-container">
                <li class="container__content__list-container__items">
                    <a href="https://www.instagram.com/thecubeday/?hl=es" target="_blank"><i
                        class="fa-brands fa-instagram container__content__list-container__items__icon--1"
                    ></i></a>
                    <p class="container__content__list-container__items__txt">
                        @thecubeday
                    </p>
                </li>
                <li class="container__content__list-container__items">
                    <a href="https://www.facebook.com/p/thecubeday-100070554780369/" target="_blank"><i
                        class="fa-brands fa-square-facebook container__content__list-container__items__icon--2"
                    ></i></a>
                    <p class="container__content__list-container__items__txt">
                        thecubeday
                    </p>
                </li>
            </ul>
        </div>
    </div>
</section>

<style lang="scss">
    .container {
        width: fit-content;
        view-timeline-name: --image;
        view-timeline-axis: inline;
        animation-timeline: --image;
        animation-name: fade-in;
        animation-range: entry 0% cover 40%;

        animation-fill-mode: both;

        @keyframes fade-in {
            from {
                scale: 25%;
                opacity: 0;
            }
            to {
                scale: 100%;
                opacity: 1;
            }
        }

        &__img-container {
            display: flex;
            justify-content: center;
            position: relative;

            &:hover &__img--mini {
                top: 100vh;
            }

            &__img {
                position: absolute;
                transform: rotate(180deg);
                top: -100px;

                &--mini {
                    position: absolute;
                    width: 420px;
                    top: 150px;
                    transform: rotate(180deg);
                    transition: all 2s;
                }
            }
        }

        &__content {
            align-items: center;
            height: 100vh;
            display: flex;

            &__title {
                margin-top: 200px;
                margin-bottom: 20px;
                font-family: "Bebas Neue";
                font-size: 66px;
                text-align: right;
                line-height: 60px;
                font-weight: 100;

                &--bold {
                    font-family: "Poppins";
                    font-weight: 900;
                    text-align: center;
                    font-size: 66px;
                    width: 425px;
                    line-height: 40px;
                    margin-bottom: 45px;
                    display: flex;
                    gap: 15px;
                    align-items: center;
                    text-align: right;
                    justify-content: flex-end;

                    &__small {
                        font-family: "Bebas Neue";
                        font-weight: 100;
                    }
                }
            }

            &__img {
                display: none;
            }

            &__list-container {
                list-style-type: none;

                &__items {
                    display: flex;
                    font-size: 51px;
                    align-items: center;
                    gap: 20px;

                    &__txt {
                        font-family: "Antonio Variable", sans-serif;
                    }

                    &__icon {
                        &--1 {
                            cursor: pointer;
                            transition: all 0.5s;

                            &:hover {
                                background: linear-gradient(
                                    45deg,
                                    #f9ce34,
                                    #ee2a7b,
                                    #6228d7
                                );
                                -webkit-background-clip: text;
                                color: transparent;
                            }
                        }

                        &--2 {
                            cursor: pointer;
                            transition: all 0.5s;

                            &:hover {
                                background: linear-gradient(
                                    45deg,
                                    #3b5998,
                                    #8b9dc3
                                );
                                -webkit-background-clip: text;
                                color: transparent;
                            }
                        }
                    }
                }
            }
        }
    }
</style>
