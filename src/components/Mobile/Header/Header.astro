---
import Nav from "./Nav.astro";
import Aside from "./Aside.astro";
import HeroImg from "../../../assets/Header/hero-img.png";
import Arrow from "../../../assets/Header/arrow.png";
---

<header class="header" id="i">
    <main class="header__main">
        <div class="header__main__rectangle"></div>
        <img src={Arrow.src} class="header__main__arrow">
        <img src={HeroImg.src} class="header__main__img">
    </main>
    <Aside></Aside>
</header>

<style lang="scss">
    .header{
        overflow-x: hidden;
        width: 100vw;

        &__main{
            margin-top: 50px;
            margin-bottom: 50px;
            width: 100%;
            display: flex;
            justify-content: flex-end;
            align-items: flex-end;

            &__rectangle{
                background: url("../../../assets/Header/rectangle-bg.png");
                width: 100%;
                height: 265px;
                position: absolute;
                z-index: -1;

                &::before {
                    content: "";
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background: url("../../../assets/Header/rectangle-bg.png");
                    background-repeat: no-repeat;
                    background-size: cover;
                    background-position: center;
                    filter: blur(3px); // Aplica el desenfoque aquí
                    z-index: -1; // Manda el pseudo-elemento detrás del contenido
                }
            }

            &__arrow{
                position: absolute;
                left: 0px;
                top: 110px;
                z-index: 2;
            }

            &__img{
                width: 454px;
                height: 420px;
                object-fit: cover;
                position: relative;
                left: -20%;
            }
        }
    }
</style>