---
import sticker1 from "../../assets/Restaurants/r-1/sticker-1.png";
import sticker2 from "../../assets/Restaurants/r-2/sticker-2.png";
import sticker3 from "../../assets/Restaurants/r-3/sticker-3.png";
---

<article class="article">
    <h2 class="article__subtitle">
        THE CUBE DAY, THE CUBE FUSION, THE CUBE DE LA FONT.
    </h2>
    <h1 class="article__title">
        NUESTROS <a class="article__title--big" href="#restaurantes "
            >
            <img src={sticker1.src} alt="TheCubeDay" class="article__title--big__img article__title--big__img--1">
            <img src={sticker2.src} alt="TheCubeDay" class="article__title--big__img article__title--big__img--2">
            <img src={sticker3.src} alt="TheCubeDay" class="article__title--big__img article__title--big__img--3">
            <span class="article__title--big__1">RESTAURANTES:</span><span
                class="article__title--big__2">RESTAURANTES:</span
            ></a
        >
    </h1>
</article>

<style lang="scss">
    .article {
        margin-top: 10px;
        // border: 2px solid tomato;
        display: flex;
        // align-items: center;
        padding-left: 3vw;
        flex-direction: column;
        width: fit-content;
        view-timeline-name: --image;
        view-timeline-axis: inline;
        animation-timeline: --image;
        animation-name: fade-in;
        animation-range: entry 0% cover 40%;

        animation-fill-mode: both;

        @keyframes fade-in {
            from {
                scale: 25%;
                opacity: 0;
            }
            to {
                scale: 100%;
                opacity: 1;
            }
        }

        &__title {
            line-height: 120px;
            font-family: "Antonio Variable", sans-serif;
            color: #603b2a;
            // font-size: clamp(102.15px, 8vw, 162px);
            font-size: 102px;
            font-weight: 400;

            &--big {
                font-size: 140.97px;
                font-family: "Staatliches", sans-serif;
                display: flex;
                flex-direction: column;
                overflow: hidden;
                height: 125px;
                position: relative;

                &__1, &__2{
                    transition: all .3s;
                    position: relative;
                    cursor: pointer;
                }

                &__img{
                    position: absolute;
                    width: 50px;
                    height: 50px;
                    z-index: 10;
                    opacity: 0;
                    transition: all .5s;

                    &--1{
                        left: 100px;
                        top: 10px;
                    }

                    &--2{
                        left: 300px;
                        bottom: 20px;
                    }

                    &--3{
                        right: 200px;
                        top: 30px;
                    }
                }

                &:hover &__1{
                    transform: translateY(-125px);
                }

                &:hover &__2{
                    transform: translateY(-125px);
                }

                &:hover &__img{
                    opacity: 1;
                }
            }
        }

        &__subtitle {
            font-family: "Abel", sans-serif;
            font-size: 18px;
            font-weight: 400;
        }
    }

    @media only screen and (min-width: 1600px) {
        .article {
            padding-left: 3vw;
            width: fit-content;

            &__title {
                line-height: 130px;

                &--big {
                    font-size: 154.97px;
                }
            }
        }
    }
</style>
