---
const { section, title, description, price, img } = Astro.props;

let imgClass = "card__part__img";

if (img == "") {
    imgClass = "card__part__img--none";
}
---

<div class="card" data-card={section}>
    <div class="card__part card__part--1">
        <h1 class="card__part__title">{title}</h1>
        <p class="card__part__description">{description}</p>
        <p class="card__part__price">{price}</p>
    </div>
    <div class="card__part card__part--2">
        <img src={img} alt={title} class={imgClass} />
    </div>
</div>

