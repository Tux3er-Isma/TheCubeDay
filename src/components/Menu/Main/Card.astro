---
const { section, title, description, price, img } = Astro.props;

let imgClass = "card__part__img";

if (img == ""){
    imgClass = "card__part__img--none";
}
---

<div class="card" data-card={section}>
    <div class="card__part card__part--1">
        <h1 class="card__part__title">{title}</h1>
        <p class="card__part__description">{description}</p>
        <p class="card__part__price">{price}</p>
    </div>
    <div class="card__part card__part--2">
        <img src={img} alt={title} class={imgClass}>
    </div>
</div>

<style lang="scss">
    .card{
        padding: 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: fit-content;
        border: 1px solid #000;
        border-radius: 46px;
        height: 253px;
        break-inside: avoid;

        &__part{
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: space-evenly;

            &__title{
                width: 200px;
                font-weight: 500;
                font-size: 26px;
            }

            &__description{
                width: 200px;
                font-size: 15px;
                font-weight: 400;
            }

            &__price{
                font-size: 23.33px;
                font-weight: bold;
            }

            &__img{
                width: 221px;
                height: 203px;
                object-fit: cover;
                border-radius: 30px;

                &--none{
                    display: none;
                }
            }
        }
    }

    [data-card="Aperitivos"]{
        border: 1px solid rgba(62, 31, 31, 0.42);
        background-color: rgba(210, 255, 201, 0.3);

        .card__part{

            &__price{
                width: fit-content;
                background-color: #8DC582;
                color: #395637;
                border-radius: 14px;
                width: 93px;
                height: 38px;
                display: flex;
                justify-content: center;
                align-items: center;
            }
        }
    }

    [data-card="Arepas"]{
        border: 1px solid 9C8F89;
        background-color: #FFFFFF;

        .card__part{

            &__price{
                width: fit-content;
                background-color: rgba(255, 165, 0, 0.7);
                color: #7B4902;
                border-radius: 14px;
                width: 93px;
                height: 38px;
                display: flex;
                justify-content: center;
                align-items: center;
            }
        }
    }

    @media only screen and (max-width: 480px){
        .card{
            margin-bottom: 20px;
            width: 180px;
            height: fit-content;
            flex-direction: column;
            align-items: flex-start;

            &__part{
                width: 100px;

                &--1{
                    gap: 10px;
                    justify-content: space-between;
                }

                &--2{
                    display: flex;
                    flex-direction: row;
                    width: 100%;
                    justify-content: center;
                }

                &__title{
                    width: 100px;
                    font-size: 20px;
                }

                &__description{
                    width: 150px;
                    font-size: 13px;
                }

                &__price{
                    font-size: 18px;
                }

                &__img{
                    margin-top: 20px;
                    width: 160px;
                    height: 100px;
                }
            }
        }
    }
</style>