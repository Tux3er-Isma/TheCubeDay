    .card {
        padding: 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: fit-content;
        border: 1px solid #000;
        border-radius: 46px;
        height: 253px;
        break-inside: avoid;
        background-color: #ffffff;
        border: 1px solid rgba(62, 31, 31, 0.42);

        &__part {
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: space-evenly;

            &__title {
